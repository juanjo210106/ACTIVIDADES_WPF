<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Editor de Estilos" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox x:Name="txtContenido" AcceptsReturn="True" TextWrapping="Wrap" Height="150"></TextBox>
            <TextBlock>Elige un estilo para el texto</TextBlock>
            <RadioButton GroupName="Estilos" Name="RbNormal" Content="Normal"></RadioButton>
            <RadioButton GroupName="Estilos" Name="RbNegrita" Content="Negrita"></RadioButton>
            <RadioButton GroupName="Estilos" Name="RbRojo" Content="Rojo"></RadioButton>
            <Button Content="Aplicar Estilo" Margin="0,10,0,0" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
