<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock FontWeight="Bold">Tareas Pendientes</TextBlock>
            <CheckBox x:Name="chkTodos" IsThreeState="True" Checked="chkTodos_Checked">Seleccionar todas</CheckBox>
            <StackPanel Margin="20,5,0,0">
                <CheckBox x:Name="chkTarea1" Click="chkHijo">Estudiar WPF</CheckBox>
                <CheckBox x:Name="chkTarea2">Hacer la compra</CheckBox>
                <CheckBox x:Name="chkTarea3">Llamar al médico</CheckBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
