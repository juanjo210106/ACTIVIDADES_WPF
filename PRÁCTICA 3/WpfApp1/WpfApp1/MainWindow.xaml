<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label>¿La mejor aplicación desarrollada es?</Label>
            <StackPanel Margin="10">
                <RadioButton>Wallapop</RadioButton>
                <RadioButton>Milanuncios</RadioButton>
                <RadioButton x:Name="oVerdadera">Nexus</RadioButton>
                <RadioButton>Aliexpress</RadioButton>
            </StackPanel>
            <Button Click="Button_Click">Corregir</Button>
        </StackPanel>
    </Grid>
</Window>
