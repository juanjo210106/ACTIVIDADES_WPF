<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="15">

        <TextBlock Text="Módulos que pienso aprobar" FontWeight="Bold" Margin="0,0,0,10"/>

        <CheckBox 
            x:Name="ChkTodos"
            Content="Todos los módulos"
            IsThreeState="True"
            Checked="ChkTodos_Checked" 
            />

        <StackPanel Margin="20,5,0,0">

            <CheckBox x:Name="ChkDI" Content="Desarrollo de Interfaces" Click="ChkModulo_Click"  />
            <CheckBox x:Name="ChkSGE" Content="Sistemas de Gestión Empresarial" Margin="0,5,0,0" Click="ChkModulo_Click" />
            <CheckBox x:Name="ChkAD" Content="Acceso a Datos" Margin="0,5,0,0" Click="ChkModulo_Click" />

        </StackPanel>

    </StackPanel>
</Window>
